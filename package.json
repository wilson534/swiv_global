{
  "name": "swiv",
  "version": "1.0.0",
  "description": "AI-Powered Social Investing App on Solana",
  "private": true,
  "workspaces": [
    "api",
    "mobile"
  ],
  "scripts": {
    "dev:api": "cd api && npm run dev",
    "dev:mobile": "cd mobile && npx expo start",
    "build:api": "cd api && npm run build",
    "build:mobile": "cd mobile && npx expo export",
    "test:programs": "anchor test",
    "build:programs": "anchor build",
    "deploy:programs": "anchor deploy --provider.cluster devnet",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "solana",
    "web3",
    "defi",
    "social",
    "investing",
    "ai",
    "react-native"
  ],
  "author": "@Musketeer",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "node-fetch": "^2.7.0"
  }
}

